<Window x:Class="MyDMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDMS"
        mc:Ignorable="d"
        Title="Dream DMS" Height="500" Width="850">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label FontSize="30" Margin="290,27,271,346" Grid.Row="0">
            <Bold>Create database</Bold>
        </Label>
        <Label FontSize="15" Margin="225,143,438,264" Grid.Row="0">Database name:</Label>
        <TextBox x:Name="databaseNameTextBox" FontSize="15" Margin="358,148,202,259" Grid.Row="0">Database1</TextBox>
        <Button FontSize="15" Height="40" Width="100" Click="CreateDatabaseBtn_OnClick" Grid.Row="0" Margin="348,198,348,199">Create</Button>
        <Label FontSize="15" Margin="225,266,438,141" Grid.Row="0" Content="Database path:"/>
        <TextBox x:Name="databasePathTextBox" FontSize="15" Margin="358,271,202,136" Grid.Row="0"/>
        <Button FontSize="15" Height="40" Width="100" Click="OpenDatabaseBtn_OnClick" Grid.Row="0" Margin="348,321,348,76" Content="Open"/>
    </Grid>
</Window>
